<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.web.WebView?>

<AnchorPane prefHeight="900.0" prefWidth="1600.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.MainViewController">
   <children>
      <HBox alignment="CENTER_LEFT" prefHeight="50.0" prefWidth="1600.0">
         <children>
            <Button mnemonicParsing="false" onAction="#onActionPrograms" text="Programs">
               <HBox.margin>
                  <Insets left="50.0" />
               </HBox.margin>
            </Button>
            <Button mnemonicParsing="false" onAction="#onActionHome" text="Home">
               <HBox.margin>
                  <Insets left="200.0" />
               </HBox.margin>
            </Button>
            <ComboBox fx:id="statesComboBox" editable="true" onAction="#onActionStates" prefWidth="800.0">
               <HBox.margin>
                  <Insets left="50.0" />
               </HBox.margin>
            </ComboBox>
         </children>
      </HBox>
      <VBox alignment="CENTER" layoutY="50.0" prefHeight="850.0" prefWidth="300.0">
         <children>
            <GridPane alignment="CENTER" vgap="10.0">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <RadioButton mnemonicParsing="false" onAction="#onActionFirst" text="Praxis Check 1">
                     <toggleGroup>
                        <ToggleGroup fx:id="checkGroup" />
                     </toggleGroup>
                     <GridPane.margin>
                        <Insets left="20.0" />
                     </GridPane.margin>
                  </RadioButton>
                  <RadioButton mnemonicParsing="false" onAction="#onActionSecond" text="Praxis Check 2" toggleGroup="$checkGroup" GridPane.columnIndex="1">
                     <GridPane.margin>
                        <Insets />
                     </GridPane.margin>
                  </RadioButton>
                  <Label alignment="CENTER" text="Initials:" textAlignment="CENTER" GridPane.rowIndex="1">
                     <font>
                        <Font size="18.0" />
                     </font>
                     <GridPane.margin>
                        <Insets left="50.0" />
                     </GridPane.margin>
                  </Label>
                  <TextField fx:id="initialsTxt" maxWidth="100.0" prefWidth="100.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
               </children>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </GridPane>
            <TextField fx:id="praxisNoteTxt" maxWidth="280.0" prefHeight="300.0">
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </TextField>
            <GridPane alignment="CENTER_RIGHT">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <Button mnemonicParsing="false" onAction="#onActionCopy" text="Copy" GridPane.halignment="RIGHT">
                     <GridPane.margin>
                        <Insets right="20.0" />
                     </GridPane.margin>
                  </Button>
                  <Button mnemonicParsing="false" onAction="#onActionClear" text="Clear" GridPane.halignment="CENTER">
                     <GridPane.margin>
                        <Insets left="50.0" />
                     </GridPane.margin>
                  </Button>
               </children>
            </GridPane>
         </children>
      </VBox>
      <HBox fx:id="webView" layoutX="300.0" layoutY="50.0" prefHeight="850.0" prefWidth="1300.0">
         <children>
            <WebView prefHeight="200.0" prefWidth="200.0" />
         </children>
      </HBox>
   </children>
</AnchorPane>
